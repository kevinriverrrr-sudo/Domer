{
  "manifest_version": 3,
  "name": "FunPay Ultimate Pro - Супер Расширение для Продавцов и Покупателей",
  "version": "1.0.0",
  "description": "Мощнейшее расширение с 100+ функциями для автоматизации работы на FunPay: автоответчик, автозакупка, аналитика конкурентов, автожалобы и многое другое!",
  
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "contextMenus",
    "webRequest",
    "cookies",
    "downloads",
    "clipboardWrite",
    "tabs",
    "scripting",
    "unlimitedStorage"
  ],
  
  "host_permissions": [
    "*://funpay.com/*",
    "*://*.funpay.com/*",
    "*://funpay.ru/*",
    "*://*.funpay.ru/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://funpay.com/*",
        "*://*.funpay.com/*",
        "*://funpay.ru/*",
        "*://*.funpay.ru/*"
      ],
      "js": [
        "lib/utils.js",
        "lib/storage.js",
        "content/main.js",
        "content/page-injector.js",
        "modules/common/dom-observer.js",
        "modules/seller/auto-responder.js",
        "modules/seller/order-automation.js",
        "modules/seller/lot-booster.js",
        "modules/seller/price-manager.js",
        "modules/buyer/auto-purchase.js",
        "modules/buyer/price-monitor.js",
        "modules/analytics/competitor-tracker.js",
        "modules/analytics/sales-stats.js",
        "modules/automation/auto-complaints.js",
        "modules/security/scam-detector.js",
        "modules/notifications/notification-manager.js"
      ],
      "css": [
        "assets/styles/inject.css",
        "assets/styles/themes.css"
      ],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "ui/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_ui": {
    "page": "ui/options/options.html",
    "open_in_tab": true
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "ui/dashboard/*",
        "lib/*"
      ],
      "matches": [
        "*://funpay.com/*",
        "*://*.funpay.com/*",
        "*://funpay.ru/*",
        "*://*.funpay.ru/*"
      ]
    }
  ],
  
  "commands": {
    "toggle-auto-responder": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "Вкл/выкл автоответчик"
    },
    "open-dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Открыть дашборд"
    },
    "quick-response": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "Быстрый ответ"
    }
  }
}
