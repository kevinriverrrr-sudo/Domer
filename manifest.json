{
  "manifest_version": 3,
  "name": "Пакетный покупатель",
  "version": "1.0.0",
  "description": "Расширение для пакетной покупки на Funpay",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.funpay.com/*", "*://localhost:*/*", "file://*/*test.html"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icons/icon.svg"
  }
}