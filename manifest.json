{
  "manifest_version": 3,
  "name": "Funpay Trading Helper",
  "version": "1.0.0",
  "description": "Расширение для торговли на Funpay.com",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://funpay.com/*",
    "https://*.funpay.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://funpay.com/*",
        "https://*.funpay.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
