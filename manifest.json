{
  "manifest_version": 3,
  "name": "FunPay Pro Extension",
  "version": "1.0.0",
  "description": "Продвинутое расширение для Funpay.com с кастомизацией, автоматизацией и аналитикой",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://funpay.com/*",
    "https://*.funpay.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://funpay.com/*", "https://*.funpay.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["themes/*", "cursors/*", "utils/*"],
      "matches": ["https://funpay.com/*", "https://*.funpay.com/*"]
    }
  ]
}
