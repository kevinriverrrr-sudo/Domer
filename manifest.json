{
  "manifest_version": 3,
  "name": "Stripe Test Autofill for Cursor",
  "version": "1.0.0",
  "description": "Autofill Stripe test payment forms with official test cards and billing details from cursor.com",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://cursor.com/*",
    "https://checkout.stripe.com/*",
    "https://js.stripe.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://cursor.com/*"],
      "js": ["content-cursor.js"],
      "css": ["content-cursor.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://checkout.stripe.com/*",
        "https://js.stripe.com/*"
      ],
      "js": ["content-stripe.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "trigger-autofill": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Trigger Stripe test autofill"
    }
  }
}
